# Make a search that returns no match:
def search(list, n):
    for i in range(len(list)):
        if list[i] == n:
            return True
    return False


list = [1, 2, 3, 4, 5, 6]
#
n = 7
#
if search(list, n):
    print("Found")
else:
    print("Not Found")

