# Remove empty strings from a list of strings
      str_list = ["Emma", "Jon", "", "Kelly", None, "Eric", ""]
str_list = ["Emma", "Jon", "", "Kelly", None, "Eric", ""]
while ("" in str_list):
    str_list.remove("")
str_list.remove(None)
print(str_list)

